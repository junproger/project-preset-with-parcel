{
  "$schema": "https://json.schemastore.org/package",
  "name": "project-preset-with-parcel",
  "version": "1.0.0",
  "description": "project preset with parcel bundler by Junproger",
  "keywords": [
    "parcel",
    "bundler",
    "typescript",
    "preset",
    "template",
    "boilerplate"
  ],
  "homepage": "https://github.com/junproger/project-preset-with-parcel",
  "repository": "git+https://github.com/junproger/project-preset-with-parcel.git",
  "author": "Junproger <junproger@gmail.com> (https://github.com/junproger)",
  "private": true,
  "license": "ISC",
  "source": "./source/index.html",
  "targets": {
    "default": {
      "distDir": "./build"
    }
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "types": "tsc --noEmit",
    "check": "prettier --check source/",
    "format": "prettier --write source/",
    "start": "parcel serve --open",
    "build": "parcel build --public-url ./",
    "watch": "parcel watch ./source/index.html"
  },
  "dependencies": {},
  "devDependencies": {
    "parcel": "^2.9.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  }
}
